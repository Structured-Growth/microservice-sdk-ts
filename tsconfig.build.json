{
  "compilerOptions": {
    "outDir": "./.dist/",
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "allowJs": true,
    "lib": [
      "ES2021"
    ],
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}